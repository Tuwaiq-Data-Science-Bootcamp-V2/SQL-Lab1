DB LAB 1
CREATE TABLE Authors(
    ID SERIAL PRIMARY KEY,
    Name VARCHAR(70) NOT NULL,
    Country VARCHAR(100) NOT NULL);


ALTER TABLE Authors
ADD Age int;

INSERT INTO Authors
